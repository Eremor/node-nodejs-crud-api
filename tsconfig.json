{
  "compilerOptions": {
    "target": "ES2023",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "noImplicitAny": true,
    "baseUrl": "./",
    "paths": {
      "@controllers": [
        "src/controllers"
      ],
      "@controllers/*": [
        "src/controllers/*"
      ],
      "@db": [
        "src/db"
      ],
      "@db/*": [
        "src/db/*"
      ],
      "@models": [
        "src/models"
      ],
      "@models/*": [
        "src/models/*"
      ],
      "@routes": [
        "src/routes"
      ],
      "@routes/*": [
        "src/routes/*"
      ],
      "@types": [
        "src/types"
      ],
      "@types/*": [
        "src/types/*"
      ],
      "@utils": [
        "src/utils"
      ],
      "@utils/*": [
        "src/utils/*"
      ],
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}